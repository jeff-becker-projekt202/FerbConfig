{
    "name": "ferb/conf",
    "type": "library",
    "description": "A configuration library inspired by asp.net core configuration",
    "homepage": "https://github.com/jeff-becker-projekt202/FerbConfig",
    "license": "MIT",
  

    "require": {
        "ferb/iterators": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "autoload": {
        "psr-4": {
            "Ferb\\Conf\\": "src/",
            "Ferb\\Conf\\Tests\\":  "tests/"
        }
    },
    "bin": ["bin/ferb-conf"],
    "scripts": {
        "test":"php ./vendor/phpunit/phpunit/phpunit",
        "fix-all":"php ./vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config .php_cs"
    }
}
